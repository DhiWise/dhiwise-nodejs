const response = require('../../utils/response');

/**
 * @description : returns total number of documents of <%-MODEL_NAME%>
 * @param {object} <%-MODEL_NAME-%>Db : db service instance
 * @param {object} where : where conditions
 * @return {object} : no of documents.
 */
const count = ({ <%-MODEL_NAME-%>Db }) => async (where) => {
    let totalRecords = await <%-MODEL_NAME-%>Db.count(where);
    return response.success({data: { totalRecords }});
}
module.exports = count;